<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SemesterMapper">
	
	<!--表名 -->
	<sql id="tableName">
		edu_semester
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		id,
		name,
		reg_start,
		reg_end,
		semester_start,
		semester_end,
		weeks,
		s_id,
		remark,
		create_date,
		creator_id,
		limite_count
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{id},
		#{name},
		#{reg_start},
		#{reg_end},
		#{semester_start},
		#{semester_end},
		#{weeks},
		#{s_id},
		#{remark},
		#{create_date},
		#{creator_id},
		#{limite_count}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			id = #{id}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			name = #{name},
			reg_start = #{reg_start},
			reg_end = #{reg_end},
			semester_start = #{semester_start},
			semester_end = #{semester_end},
			weeks = #{weeks},
			s_id=#{s_id},
			remark=#{remark},
			create_date=#{create_date},
			creator_id=#{creator_id},
			limite_count=#{limite_count}
		where 
			id = #{id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			id = #{id}
	</select>
	
	<!-- 通过时间、学校ID获取数据 -->
	<select id="findByDateAndSid" parameterType="pd" resultType="pd">
	    SELECT
			STUFF(
				(
					SELECT
						id + ','
					FROM
						edu_semester
					WHERE
						#{regDate} between s.reg_start and s.reg_end 
						<if test="s_id != null and s_id != ''"><!-- 关键词检索 -->
						    and s_id in 
						    <foreach item="item" index="index" collection="s_id" open="(" separator=" or" close=")">
							 	'${item}'
							</foreach>
						</if>
						 FOR XML PATH('')
				),
				1,
				0,
				''
			) AS ids
		FROM
			edu_semester AS t_u
	</select>
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where
			<foreach item="item" index="index" collection="pd.schooIds" open="(" separator=" or" close=")">
			 s_id  LIKE ('%'+'${item}'+'%')
			</foreach>
			<if test="pd.keywords != null and pd.keywords != ''"><!-- 关键词检索 -->
				and
					(
					 name LIKE ('%'+#{pd.keywords}+'%')
					)
			</if>
		order by create_date
	</select>
	<!--  -->
</mapper>