<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ActivityMapper">
	
	<!--表名 -->
	<sql id="tableName">
		edu_activity
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		id,
		name,
		content,
		people_num,
		file_url,
		activity_start_time,
		activity_end_time,
		apply_start_time,
		apply_end_time,
		create_by,
		create_time,
		update_by,
		update_time,
		status,
		need_check,
		need_send_message,
		publish_range,
		activity_location,
		school_id,
		school_name
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{id},
		#{name},
		#{content},
		#{people_num},
		#{file_url},
		#{activity_start_time},
		#{activity_end_time},
		#{apply_start_time},
		#{apply_end_time},
		#{create_by},
		#{create_time},
		#{update_by},
		#{update_time},
		#{status},
		#{need_check},
		#{need_send_message},
		#{publish_range},
		#{activity_location},
		#{school_id},
		#{school_name}
	</sql>
	
	<!-- 列表 -->
	<select id="listPage" parameterType="page" resultType="pd">
		select
			<include refid="Field"></include>
		from 
			<include refid="tableName"></include>
		where
			1=1
		AND
			create_by = #{pd.username}
		<if test="pd.keywords != null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				name LIKE ('%'+#{pd.keywords}+'%')
		</if>
		<if test="pd.state != null and pd.state != ''"><!-- 状态检索 -->
			and
				status = #{pd.state}
		</if>
		ORDER BY
			activity_start_time
	</select>

	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		id = #{id}
	</select>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		name=#{name},
		content=#{content},
		people_num=#{people_num},
		file_url=#{file_url},
		activity_start_time=#{activity_start_time},
		activity_end_time=#{activity_end_time},
		apply_start_time=#{apply_start_time},
		apply_end_time=#{apply_end_time},
		status=#{status},
		need_check=#{need_check},
		need_send_message=#{need_send_message},
		publish_range=#{publish_range},
		activity_location=#{activity_location}
		where
		id = #{id}
	</update>

	<!--根据id删除-->
	<delete id="deleteById" parameterType="String">
		DELETE FROM <include refid="tableName"></include> WHERE id = #{id}
	</delete>
</mapper>