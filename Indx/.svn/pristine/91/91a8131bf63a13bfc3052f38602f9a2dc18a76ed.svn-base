             //        }
			// 	]
			// }]
			function getHtml(){
                if(data.length>0){
                    $('tbody').empty();
                    var num=0
                    for(var i=0;i<data.length;i++){
                        $.each(data[i],function(key,val){

                            var html='';
                            if(key=='lesson_name'){
                                html+="<option value="+num+">"+val+"</option>";
                                $('#select_id').append(html)
                            }
                            if(key=='content'){
                                for (var j=0;j<val.length;j++){
                                    html+="<tr data-id="+num+" style='display:none'><td>"+val[j].lesson_periods+"</td><td>"+val[j].grades_name+"</td><td>"+val[j].student_id+"</td><td>"+val[j].status+"</td></tr>";
                                }
                                $('tbody').append(html)
                            }

                        })
                        num++;
                    }
                }
			}
			getHtml()
			$(document).on("change","#select_id",function () {
				var id=$(this).val()
				$("tbody tr").each(function(){
				    if($(this).attr("data-id")==id){
				        $(this).show()
					}else{
                        $(this).hide()
					}
				})
            })


		})
	</script>
