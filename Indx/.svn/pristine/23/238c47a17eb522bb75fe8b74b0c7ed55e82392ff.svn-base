.form-label{
  display: block;
  padding: 5px 0px;
  width: 150px;
}
.layui-form-label{
  float: left;
  display: block;
  width: 120px;
  font-weight: 400;
  text-align: right;
  padding: 9px 0px;
  font-family: PingFangSC-Regular;
  font-size: 1rem;
  font-weight: normal;
  font-stretch: normal;

  color: #333333;
}
.form-item-inline{
  margin-left: 1%;
  width: 48%;
  display: inline-block;
}
.hint{
  display: inline-block;height: 3rem;line-height: 3rem;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #999999;
}
#table .active {
  border: 1px solid #108ee9;
}
#table .item-check{
  display: inline-block;
  margin: auto 0;
  right: 10px;
  /*position: absolute;*/
  width: 15px;
  height: 15px;
  border-radius: 1px;
  box-sizing: border-box;
  border: 1px solid #DAE2EA;
}
#table .icon-gou{
  display: none;
  width: 15px;
  height: 15px;
  color: #108ee9;
  position: relative;
  top: -4px;
  left: -1px;

}
#table .active .icon-gou{
  display: inline-block;
}
