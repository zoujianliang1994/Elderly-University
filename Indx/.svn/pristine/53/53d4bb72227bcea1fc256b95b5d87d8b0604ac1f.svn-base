	@Override
	public PageData initeAccount(PageData pd) throws Exception {
		String pwdStrategy = pd.getString("pwdStrategy");
		String idn = pd.getString("idn");
		String sName = pd.getString("sName");
		String userName = idn;
		String userId = UuidUtil.get32UUID();
		pd.put("USER_ID", userId); // ID 主键
		pd.put("STATUS", "0");
		pd.put("SCHOOL_ID", pd.getString("SCHOOL_ID"));
		pd.put("SCHOOL_NAME", pd.getString("SCHOOL_NAME"));
		// 默认初始密码123456
		if ("1".equals(pwdStrategy)) {
			userName = PingYinTools.getPinYinHeadChar(sName);
			// 名称简称策略
			pd.put("PASSWORD", new SimpleHash("SHA-1", userName, "123456").toString()); // 密码加密
		} else {
			// 身份证策略
			pd.put("PASSWORD", new SimpleHash("SHA-1", idn, "123456").toString()); // 密码加密
		}
		pd.put("USERNAME", userName);
		saveU(pd); // 执行保存
		PageData result = new PageData();
		result.put("userId", userId);
		result.put("userName", userName);
		result.put("password", "123456");
		return result;
	}
