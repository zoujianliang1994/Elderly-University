<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>

<%
	String path = request.getContextPath();
	String basePath = request.getScheme() + "://" + request.getServerName() + ":" + request.getServerPort() + path + "/";
%>
<!DOCTYPE html>
<html lang="en">
<head>
<base href="<%=basePath%>">
<!-- jsp文件头和头部 -->
	<%@ include file="../../system/index/headcss.jsp"%>

    <style>
		.imgBox{
			position:relative;
		}
		#imgfile{
			position:absolute;
			z-index: -1;
			top: 0px;
			left:0
		}
		.layui-upload-drag{
			background-size:cover;
		}

	</style>
</head>
<body >
<div class="edit_menu" class="disnone">

	<div class="layui-form">
	<button class="srarchBtn" style="margin-left: 0px;" id="add">
		<i  class="iconfont icon-add"></i>
		<span>新增</span>
	</button>
	</div>

	<div id="edit" style="display: none;">
		<form  class="layui-form"  name="form1" id="form1" >
			<div class="layui-form-item">

				<div class="layui-form-item">
					<div class="layui-row">
						<input name="c_id" id="c_id" type="hidden" value="${pd.gId}">
						<input name="type" id="type" type="hidden" value="">
						<div class="form-item-inline">
							<label class="form-label"><span class="red-star">*</span>小组组长：</label>
							<div class="layui-input-block id">
								<select name="id" lay-verify="required" lay-search="">
									<option value="">直接选择或搜索选择</option>
									<c:forEach var="var" items="${allStudent}">
										<option value="${var.id}">${var.xm}</option>
									</c:forEach>
								</select>
							</div>
						</div>

						<div class="form-item-inline">
							<label class="form-label"><span class="red-star">*</span>小组名称：</label>
							<div class="layui-input-block">
								<input name="group_name" id="group_name" value="" type="text" class="layui-input layui-input-color">
							</div>
						</div>

					</div>
				</div>


			</div>

		</form>
		<div class="btnbox" >
			<c:if test="${pd.type=='0'}">
				<button id="sure" class="layui-btn layui-btn-primary layui-btn-small">保存</button>
			</c:if>
		</div>
	</div>


	<table class="layui-table center " lay-skin="line" id="table">

		<thead>
		<tr style="background-color: #f3f8ff;">
			<th class="center" style="width: 50px;">序号</th>
			<th class='center'>组长</th>
			<th class='center'>小组姓名</th>
			<th class='center' style="width: 150px;">操作</th>
		</tr>
		</thead>
		<tbody>

		<c:choose>
			<c:when test="${not empty allGroupById}">

					<c:forEach items="${allGroupById}" var="var" varStatus="vs">
						<tr>
							<td>${vs.index+1 }</td>
							<td>${var.xm}</td>
							<td>${var.group_name}</td>


							<td  style="width: 200px; text-align: center;" >


								<a data_id="${var.id }" data-name="${var.group_name}" class="table-btn-max chakan-btn student">
										<%--<i class="iconfont icon-chakan" title="查看"></i>--%>
									调整组长
								</a>

								<a data_id="${var.id }" class="table-btn bianji-btn del"  data-name="${var.group_name}" >
										<%--<i class="iconfont icon-bianji" title="编辑"></i>--%>
									删除
								</a>


							</td>
						</tr>
					</c:forEach>
			</c:when>
			<c:otherwise>
				<tr>
					<td colspan="100" class='center'>没有相关数据</td>
				</tr>
			</c:otherwise>
		</c:choose>
		</tbody>
	</table>


</div>


	<!-- 页面底部js¨ -->
	<%@ include file="../../system/index/foot.jsp"%>
	<!--提示框-->
	<script type="text/javascript">


        var form = layui.form;


        $(document).ready(function(){
            $("#add").on("click", function() {
                $("#type").val("1");
                layer.open({
                    title:"<i  class=\"iconfont icon-add\"></i>\n" +
                    "<span>新增</span>",
                    type: 1,
                    content:  $("#edit"),
                    area: ["550px","200px"],
					cancel:function () {
                        $("#edit").hide()
                    }
                });

            });

            //调组
            $(".student").on("click", function() {
                $("#type").val("0");
                $("#group_name").val($(this).attr("data-name"));


                layer.open({
                    title:"<i  class=\"iconfont icon-add\"></i>\n" +
                    "<span>重设组长</span>",
                    type: 1,
                    content:  $("#edit"),
                    area: ["550px","200px"],
                    cancel:function () {
                        $("#edit").hide()
                    }
                });

            });


            //删除组
            $(".del").on("click", function() {

               var name = $(this).attr("data-name")
                parent.layer.confirm("是否确认删除此小组", {
                    btn : [ '确定', '取消' ] //按钮
                    ,resize : false
                    ,title : "提示"
                    ,maxWidth : 800
                }, function(index) {

                    var url = "<%=basePath%>grades/deleteGroup.do?c_id=${pd.gId}&group_name="+name;
                    $.get(url,function(data){
                        if("success" == data.result){
                            parent.layer.close(index);
                            window.location.reload()
                        }else if("false" == data.result){
                            layer.msg('系统异常,保存失败!', {icon: 5});
                        }
                    });

                });

            });

            $("#sure").on("click", function () {

                if ($("#id").val() == "") {
                    layer.tips('小组组长不能为空!', $(".id"), {
                        tips: [3, '#D16E6C'],
                        time: 4000
                    });
                    $(".id").focus();
                    return false;
                }

                if ($("#group_name").val() == "") {
                    layer.tips('小组组名不能为空!', $("#group_name"), {
                        tips: [3, '#D16E6C'],
                        time: 4000
                    });
                    $("#group_name").focus();
                    return false;
                }

                $.get('grades/addGroup.do', $('#form1').serialize(), function (data) {
                    if ("success" == data.result) {
                        window.location.reload();
                    }else if("false" == data.result){
						layer.msg('保存失败，该学员已是组长!', {icon: 5});
					}
                    else {
                        layer.msg('系统异常,保存失败!', {icon: 5});
                    }
                });
            });







            $("#cancel").on("click",function(){
                layer.closeAll();
            })
        });

        function test(file_name,symbol){
            var result = file_name.split(symbol);
            return result[result.length-1];
        }
	</script>
</body>
</html>

